@model List<UsersStats>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Add icon library -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">


<h1>User Roles</h1>
<form id="account" method="post">
    <div class="btn-toolbar">
        <div class="btn-group">
            <button type="submit" class="btn btn-primary px-3" name="action" value="Block" title="Block"><i class="bi bi-pause-fill"></i></button>
            <button type="submit" class="btn btn-primary" name="action" value="Unblock" title="Unblock"><i class="bi bi-play-fill"></i></button>
            <button type="submit" class="btn btn-primary" name="action" value="Delete" title="Delete"><i class="bi bi-trash3"></i></button>
        </div>
    </div>
        <table class="table table-bordered border-primary">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Date of registration</th>
                <th>Date of last login</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.CheckBox("Id", new { value = user.UserId }) @user.UserId</td>
                    @*<td>@user.UserId</td>*@
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.DateRegistered.ToShortDateString()</td>
                    <td>@user.DateLastVisited.ToShortDateString()</td>
                    <td>@user.Status</td>
                </tr>
            }
        </tbody>
    </table>
</form>